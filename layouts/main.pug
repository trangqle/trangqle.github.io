doctype html
html(lang="en" prefix="og: https://ogp.me/ns#")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, height=device-height, initial-scale=1.0")
        - const me = 'https://katherine-le.com'
        meta(property="og:type" content="website")
        meta(property="og:url" content=`${me}${page.url}`)
        - let metatitle = title ? `${title} \u2014 Katherine Le` : 'Katherine Le'
        title= metatitle
        meta(property="og:title" content=metatitle)
        if info
            meta(property="og:image" content=`${me}${info.thumb}`)
        else
            meta(property="og:image" content=`${me}/assets/genericthumb.jpg`)
        if desc
            meta(name="description", content=desc)
            meta(property="og:description", content=desc)
        else
            meta(name="description", content="A visual designer bsed in Winnipeg, MB, specializing in branding and editorial.")
            meta(property="og:description", content="A visual designer bsed in Winnipeg, MB, specializing in branding and editorial.")
        //- For all browsers
        link(href="/assets/icons/favicon-16px.png" type="image/png" rel="icon" sizes="16x16")
        link(href="/assets/icons/favicon-32px.png" type="image/png" rel="icon" sizes="32x32")

        //- Google
        link(href="/assets/icons/favicon-48px.png" type="image/png" rel="icon" sizes="48x48")
        link(href="/assets/icons/favicon-192px.png" type="image/png" rel="icon" sizes="192x192")

        //- iPhone and iPad
        link(href="/assets/icons/favicon-hi.png" type="image/png" rel="apple-touch-icon" sizes="180x180")
        link(href="/assets/icons/favicon-167px.png" type="image/png" rel="apple-touch-icon" sizes="167x167")
        link(href="/css/main.css" rel="stylesheet")
    body
        .cover#top
            .header
                header#header(class="center:variable-width")
                    .cluster.text-icon
                        img(src="/assets/icons/logo-alt-2.svg", alt="").icon
                        p(class="line-height:tight") AVAILABLE FOR FULL TIME
                            br
                            | + FREELANCE WORK
                    a(href="/")
                        .replacements
                            img(class="icon:big" src="/assets/icons/logo-main.svg", alt="logo")
                            img(class="icon:smol" src="/assets/icons/logo-alt-1.svg", alt="logo")
                    nav.switcher#main-nav
                        div
                            a.anim-underline(href="/#works")  WORK
                        div
                            a.anim-underline(href="/about")  ABOUT
                        div
                            a(href="/contact").button
                                span GET&nbsp;IN&nbsp;TOUCH
                                .button-bg
            .stack(class="stack-size:large")
                .cover#landing
                    div
                    block splash
                block content
            block footer
                .stack#footer(class="stack-size:large")
                    img(class="icon:big" src="/assets/icons/logo-alt-1.svg", alt="logo")
                    h2(class="font-size:variable-xl text-align:center") Come say hi!
                    p(class="text-align:center center:fixed-width") Having a project in mind or simply wanting to chat?
                        br
                        | Feel free to send me a message!
                    a.button(href="mailto:hello@katherine-le.com" class="button-size:big center:fixed-width")
                        img(src="/assets/icons/logo-alt-2.svg", alt="").icon
                        span SEND ME A NOTE
                        .button-bg
                    .cluster.main-social(class="center:variable-width")
                        nav.cluster
                            a.anim-underline(href="https://behance.net/katherine-le") BEHANCE
                            a.anim-underline(href="https://instagram.com/meyuneko") INSTAGRAM
                            a.anim-underline(href="https://www.linkedin.com/in/katherinele00") LINKEDIN
                        nav.cluster
                            p &#169; 2022
                            a.anim-underline(href="#top") Back to top
        .cursor(class = "cursor-style:dot")
            div
        .cursor(class = "cursor-style:ring cursor-anim:lerp")
        script(src="/js/main.js")